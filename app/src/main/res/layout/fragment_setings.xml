<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.SetingsFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_settings_circleimage"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginTop="72dp"
        android:src="@android:mipmap/sym_def_app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_settings_editText_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:background="@null"
        android:paddingHorizontal="10dp"
        android:text="Name"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_settings_circleimage" />

    <TextView
        android:id="@+id/fragment_settings_editText_messenger_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Messenger URL"
        android:background="@null"
        android:textSize="25sp"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_settings_editText_name"
        />


    <Button

        android:id="@+id/fragment_settings_button_change_password"

        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="Change Password"
        android:textSize="25sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_settings_editText_messenger_url" />

    <Button
        android:id="@+id/fragment_settings_button_update"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="left"
        android:layout_marginTop="20sp"
        android:textAllCaps="false"
        android:text="Update Profile"
        android:textSize="25sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_settings_button_change_password" />

    <Button
        android:id="@+id/fragment_settings_button_delete_profile"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="left"
        android:layout_marginTop="20sp"
        android:textAllCaps="false"
        android:text="Delete Account"
        android:textSize="25sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_settings_button_update" />

</androidx.constraintlayout.widget.ConstraintLayout>